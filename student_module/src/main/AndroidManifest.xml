<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/um_visa_mate"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/um_visa_mate_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UMVISAMATE">

        <activity
            android:name="com.um.visamate.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.um.visamate.ui.dashboard.DashboardActivity" />
        <activity android:name="com.um.visamate.ui.login.RegisterActivity" />
        <activity android:name="com.um.visamate.ui.documents.DocumentSubmissionActivity" />
        <activity android:name="com.um.visamate.ui.faculty.FacultyPortalActivity" />
        <activity android:name="com.um.visamate.ui.officer.OfficerDashboardActivity" />
        <activity android:name="com.um.visamate.ui.settings.SettingsActivity" />
        <activity
            android:name="com.um.visamate.ui.payment.PaymentActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        
        <activity android:name="com.um.visamate.ui.faculty.FacultyUploadActivity" />

    </application>

</manifest>