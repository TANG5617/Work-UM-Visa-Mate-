<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_dark_blue"
        android:paddingHorizontal="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Payment Confirmation"
            android:textColor="@color/onPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_animated" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Payment Successful"
            android:textColor="@color/primary_dark_blue"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your transaction has been completed"
            android:textColor="@color/grey_text" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Digital Receipt"
                    android:textColor="@color/primary_dark_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_paid_status"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="âœ“ PAID"
                    android:textColor="@color/green_success"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/grey_border" android:layout_marginVertical="16dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Transaction Reference" android:textColor="@color/grey_text" android:textSize="12sp"/>
            <TextView android:id="@+id/tv_transaction_ref" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UMMJ9TT620W4QM9X" android:textColor="@color/primary_dark_blue" android:textStyle="bold" android:layout_marginBottom="12dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Date &amp; Time" android:textColor="@color/grey_text" android:textSize="12sp"/>
            <TextView android:id="@+id/tv_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="14 Jan 2026, 09:45 PM" android:textColor="@color/primary_dark_blue" android:textStyle="bold" android:layout_marginBottom="16dp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/grey_border" android:layout_marginBottom="16dp"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Visa Renewal Fee" android:textColor="@color/grey_text"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="RM 60.00" android:textColor="@color/text_primary"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Processing Fee" android:textColor="@color/grey_text"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="RM 150.00" android:textColor="@color/text_primary"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Insurance Fee" android:textColor="@color/grey_text"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="RM 100.00" android:textColor="@color/text_primary"/>
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/grey_border" android:layout_marginBottom="16dp"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Paid" android:textColor="@color/primary_dark_blue" android:textStyle="bold" android:textSize="16sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="RM 310.00" android:textColor="@color/green_success" android:textStyle="bold" android:textSize="18sp"/>
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:gravity="center" android:text="Universiti Malaya" android:textColor="@color/grey_text" android:textSize="12sp" />

    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_to_dashboard"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:text="Back to Dashboard"
        android:textAllCaps="false"
        android:textColor="@color/primary_dark_blue"
        app:backgroundTint="@color/colorSurface"
        app:cornerRadius="8dp"
        app:strokeColor="@color/primary_dark_blue"
        app:strokeWidth="2dp" />

</LinearLayout>